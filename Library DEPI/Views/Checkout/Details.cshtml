}

<h1 class="text-center">Checkout Details</h1>





<div class="container mt-4" style="width:50%;">
    <div class="card shadow">
        <div class="card-body">
            
            <dl class="row">
                <dt class="col-sm-4">
                    Checkout Date
                    @* @Html.DisplayNameFor(model => model.CheckoutDate) *@
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CheckoutDate)
                </dd>
                <dt class="col-sm-4">
                    Return Date
                    @* @Html.DisplayNameFor(model => model.DueDate) *@
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DueDate)
                </dd>
                <dt class="col-sm-4">
                    Book Name
                    @* @Html.DisplayNameFor(model => model.BookName) *@
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.BookName)
                </dd>
                <dt class="col-sm-4">
                    Email
                    @* @Html.DisplayNameFor(model => model.UserEmail) *@
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.UserEmail)
                </dd>
                @* <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Book)
                </dt>
                <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Book.Id)
                </dd>
                <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.User.Id)
                </dd> *@
            </dl>
            
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary" style="font-size:1.2rem;float:right">Back to List</a>
                @if (User.IsInRole("Admin") || User.IsInRole("Super Admin"))
                {

                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info btn-lg">Edit</a>
                }
            </div>
        </div>
    </div>
</div>