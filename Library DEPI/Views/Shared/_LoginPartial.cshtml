    <button id="logout" type="submit" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="btn border-0">Logout</button>
    </form> *@
        <a style="text-decoration:none;color:black;font-size:24px;" id="logout" type="submit" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="btn border-0">Logout</a>
    </li>
}
else
{
    <li style="list-style-type:none;">
        <a style="text-decoration:none;color:black;" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li style="list-style-type:none;">
