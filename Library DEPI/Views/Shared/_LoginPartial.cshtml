@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



@if (SignInManager.IsSignedIn(User))
{


    // Get the full email
    var email = UserManager.GetUserName(User);

    // Extract the first name from the email (assuming format is 'firstname.lastname@domain.com')
    var firstName = email.Split('@')[0].Split('.')[0];



    @*  <li >
        <a id="manage"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)</a>
    </li> *@

    <li style="list-style-type:none;">
        <p style="margin-bottom:0;" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @firstName</p>
    </li>
    <li style="list-style-type:none;">
