@model Library_DEPI.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Book Details</h1>

<div class="container mt-4" style="width:70%;">
    <div class="card shadow-lg p-4">
        
        <dl class="row">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-5">
                Availability Status
                @* @Html.DisplayNameFor(model => model.AvailabilityStatus) *@
            </dt>
            <dd class="col-sm-7">
                @if (Model.AvailabilityStatus)
                {
                    <span class="text-success">Available</span>
                }
                else
                {
                    <span class="text-danger">Not Available</span>
                }
            </dd>

            <dt class="col-sm-5">
                Published Date
                @* @Html.DisplayNameFor(model => model.PublishedDate) *@
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.PublishedDate)
            </dd>

            <dt class="col-sm-5">
                Book Image
                @* @Html.DisplayNameFor(model => model.BookImage) *@
            </dt>
            <dd class="col-sm-7">
                <img width="100" height="100" src="~/images/@Html.DisplayFor(model => model.BookImage)" alt="@Html.DisplayNameFor(model => model.Title)" />
            </dd>

            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Author.Name)
            </dd>

            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Genre.Name)
            </dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            @if (User.IsInRole("Admin") || User.IsInRole("Super Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info btn-lg">Edit</a>
            }
            <a asp-action="Index" class="btn btn-secondary" style="font-size: 1.2rem;">Back to List</a>
        </div>
    </div>
</div>

<style>
    .text-success {
        color: green;
        font-weight: bold;
    }

    .text-danger {
        color: red;
        font-weight: bold;
    }

    .card {
        border-radius: 15px;
    }
</style>
