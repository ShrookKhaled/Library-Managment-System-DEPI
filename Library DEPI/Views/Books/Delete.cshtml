@model Library_DEPI.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Book</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4">
                <h3 style="text-align:center;color:red;">Are you sure you want to delete this?</h3>
                <dl class="row">
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-5">
                        Availability Status
                        @* @Html.DisplayNameFor(model => model.AvailabilityStatus) *@
                    </dt>
                    <dd class="col-sm-7">
                        @if (Model.AvailabilityStatus)
                        {
                            <span style="color:green">Available</span>
                        }
                        else
                        {
                            <span style="color:red">Not Available</span>
                        }
                    </dd>
                    <dt class="col-sm-5">
                        Published Date
                        @* @Html.DisplayNameFor(model => model.PublishedDate) *@
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.PublishedDate)
                    </dd>
                    <dt class="col-sm-5">
                        Book Image
                        @* @Html.DisplayNameFor(model => model.BookImage) *@
                    </dt>
                    <dd class="col-sm-7">
                        <img width="100px" height="100px" src="~/images/@Html.DisplayFor(model => model.BookImage)" alt="@Html.DisplayNameFor(model => model.Title)" />
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Author)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Author.Name)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Genre)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Genre.Name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group text-center">
                        <input type="submit" value="Delete" class="btn btn-danger" style="font-size:20px;" />
                        <a asp-action="Index" class="btn btn-secondary" style="float:right;">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }

    dt {
        font-weight: bold;
    }

    dd {
        margin-bottom: 1rem;
    }
</style>
