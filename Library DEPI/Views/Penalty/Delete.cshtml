@model Library_DEPI.Models.Penalty

@{
    ViewData["Title"] = "Delete Penalty";
}

<h2>Delete Penalty</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Penalty</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Penalty ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
        <dt class="col-sm-2">
            Overdue Days
        </dt>
        <dd class="col-sm-10">
            @Model.OverdueDays
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
