@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout3";
}


<div class="row justify-content-center">
    <div class="col-md-6 shadow-lg rounded-2  ">
        <section>
            <h1 class="text-center">
                <i class="bi bi-person-circle"></i>   @ViewData["Title"]
            </h1>
            <form id="account" method="post">


                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 p-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">
                        <i class="bi bi-envelope-fill"></i>  Email
                    </label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 p-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">
                        <i class="bi bi-lock-fill"></i>  Password
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="d-flex justify-content-around">
                    @* <button type="button" class="btn btn-outline-warning " style="margin-bottom:2%;">

                        <a id="forgot-password" asp-page="./ForgotPassword">
                            <i class="bi bi-key-fill"></i> Forgot your password?
                        </a>

                    </button> *@
                    <button type="button" class="btn btn-outline-info" style="margin-bottom:2%;">

                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration:none;">
                            
                            <i class="bi bi-person-plus-fill"></i> Register as a new user
                        </a>

                    </button>
                   @*  <button type="button" class="btn btn-outline-primary" style="margin-bottom:2%;">

                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"> <i class="bi bi-send-fill"></i> Resend email confirmation</a>

                    </button> *@
                </div>
            </form>
        </section>
    </div>

</div>

